@model LMS.Models.EditUserViewModel

@{
    ViewBag.Title = "Edit";
}

<div id="wrapper">
    <div class="container">
        <div class="row login-wrapper">
            <div class="col-md-6 col-md-offset-3">
                <div class="panel panel-login">
                    <div class="panel-heading">
                        <div class="row">
                            <div>
                                <a href="#" class="active" id="login-form-link">Edit User</a>
                            </div>
                        </div>
                        <hr>
                    </div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-lg-12">
                                @using (Html.BeginForm())
                                {
                                    @Html.AntiForgeryToken()

                                    @Html.ValidationSummary(true)
                                    @Html.HiddenFor(model => model.Id)
                                    <div class="form-group">
                                        <label>Email</label>
                                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.Email)
                                    </div>
                                    <div class="form-group">
                                        <label class="pull-left">Roles</label><br />
                                        <span class=" col-md-10">
                                            @foreach (var item in Model.RolesList)
                                            {
                                                <input type="checkbox" name="SelectedRole" value="@item.Value" checked="@item.Selected" class="checkbox-inline" />
                                                @Html.Label(item.Value)<br />
                                            }
                                        </span>
                                    </div>
                                    <div class="form-group">
                                        <div class="row">
                                            <div class="col-sm-12">
                                                <button type="submit" class="form-control btn btn-default usersadmin__submit-btn">Save</button>
                                            </div>
                                        </div>
                                        <br />
                                        <a href="@Url.Action("Edit", "User", new { id = Model.Id })" class="btn btn-primary"><i class="fa fa-arrow-left"></i> Go Back</a>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}



